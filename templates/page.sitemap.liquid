<style>
    DIV#sitemap DIV.collections{

    }
    DIV#sitemap H2.collection{
        font-size: 16px;
        text-transform: uppercase;
        font-family: "museo-sans","Cabin",sans-serif !important;
    }
    DIV#sitemap UL.products LI{
        text-align: left;
        margin-bottom: 6px;
    }
    DIV#sitemap UL.products{
        list-style-type: inherit;
    }
    DIV#sitemap UL.products LI A{
        font-size: 13px;
    }
    DIV#sitemap UL.products LI A.viewall{
        color: #666;
        text-decoration: underline;
    }
    DIV#sitemap UL.products LI A.viewall:HOVER{
        color: #666;
        text-decoration: none;
    }
</style>
<div id="sitemap" class="">
    <h1 class="p25 details">{{ page.title }}</h1><br><br><br>
    <div class="row">
        {% for collection in collections %}
            {%if collection.handle != "all"%}
                <div class="col-md-3 collections">
                    <h2 class="collection"><a href="{{collection.url}}" title="{{ collection.title | escape }}">{{ collection.title }}</a></h2>
                    <ul class="products">
                        {% for product in collection.products %}
                            
                                <li><a href="{{product.url}}" title="{{ product.title }}">{{product.title}}</a></li>
                            
                        {% endfor %}
                    {%comment%}
                    <li>...</li>
                    <li><a href="{{ collection.url }}" title="{{ collection.title }}" class="viewall">View All</a></li>
                    {%endcomment%}
                    </ul>
                </div>
            {%endif%}
        {% endfor %}
        <div class="col-md-3 collections">
            <h2 class="collection">Company</h2>
            <ul class="products">
                {% for link in linklists.company.links %}
                <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-3 collections">
            <h2 class="collection">Customer Service</h2>
            <ul class="products">
                {% for link in linklists.customers.links %}
                <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>


<script>
    jQuery(document).ready(function($){
        var colHeight = 0;
        $("div.collections").each(function(){
            var tempH = $(this).height();
            if(tempH > colHeight){
                colHeight = tempH;
            }
            $(this).css({
                minHeight: colHeight + "px"
            });
        });
    });
</script>