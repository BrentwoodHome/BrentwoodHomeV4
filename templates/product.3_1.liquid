                    <!--{% include 'shippingtime' %}-->
                    <p id="add2cart_shipping"><img src="https://brentwood-home.imgix.net/iconv2-freeshipping.svg" alt="Ships free in {{ shipsfree }}">Ships free in {{ shipsfree }}</p>
                </div>
            </div>
        </div>
    </div>
</div><!-- End Row --> 
