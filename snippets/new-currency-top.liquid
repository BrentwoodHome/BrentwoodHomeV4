{% if settings.show_multiple_currencies %}
    <div id="currencies-top" class="">
      <label> Select Currency</label>
        <div class="dropdown-currency">
            <ul id="currencies" class="currencies_ul list-unstyle">
                {% for i in (1..5) %}
                    {% capture currency %}supported_currencies_{{ i }}{% endcapture %}
                    {% capture currency_img %}currencies_img_{{ i }}.png{% endcapture %}
                    {% assign currency_size = settings[currency] | size %}
                    {% if currency_size > 0 %}
                        <li class="">
                            <a data-currency="{{ settings[currency] }}" class="{% if shop.currency == settings[currency] %}selected{% endif %}" href="#" rel="nofollow">                                
                                 {{ settings[currency] }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}

{% if settings.show_multiple_currencies %}
  <script>
    jQuery(function() {

      jQuery('#currencies li a').on('click', function() {
          jQuery('#pre-currencies').attr('data-currency', jQuery(this).data('currency'));
      });

    });

  </script>
  <style>

    {% for i in (1..5) %}
      {% capture currency %}supported_currencies_{{ i }}{% endcapture %}
      {% capture currency_img %}currencies_img_{{ i }}.png{% endcapture %}
      {% capture currency_img %}currencies_img_{{ i }}.png{% endcapture %}
      {% assign currency_size = settings[currency] | size %}
      {% if currency_size > 0 %}
       #currencies-top div[data-currency="{{ settings[currency] }}"]  {background: url({{ currency_img | asset_url }}) no-repeat 0 5px;}
      {% endif %}
    {% endfor %}
  </style>
{% endif %}