{% assign producthandle = product.handle %}

<label class="" style="color:#38414f;font-weight: 500;font-size: 16px;">Add matching Easy Foundation</label>
<div class="addonmodule clearfix">
    <div class="column input">
        <div class="squaredOne">
            <input type="checkbox" value="none" id="foundation" name="foundation" />
            <label for="foundation"></label>
        </div>
    </div>
    <div class="column img">
        {% case producthandle %}
        {% when "cedar-natural-luxe-mattress" %}
        <img src="https://brentwood-home-products.imgix.net/marlo-00002.jpg?ch=Width,DPR&w=115&dpr=1&fit=clip" alt="Include a foundation">
        {% when "cypress-bamboo-gel-mattress" %}
        <img src="https://brentwood-home-products.imgix.net/marlo-00002.jpg?ch=Width,DPR&w=115&dpr=1&fit=clip" alt="Include a foundation">
        {% when "oceano-mattress" %}
        <img src="https://brentwood-home-products.imgix.net/hershel-01.jpg?ch=Width,DPR&w=115&dpr=1&fit=clip" alt="Include a foundation">
        {% when "ojai-mattress" %}
        <img src="https://brentwood-home-products.imgix.net/Brentwood_Home_-_Foundation_Web_-1.jpg?ch=Width,DPR&w=115&dpr=1&fit=clip" alt="Include a foundation">
        {% when "crystal-cove-mattress" %}
        <img src="https://brentwood-home-products.imgix.net/Brentwood_Home_-_Foundation_Web_-1.jpg?ch=Width,DPR&w=115&dpr=1&fit=clip" alt="Include a foundation">
        {% else %}
        <img src="https://brentwood-home-products.imgix.net/Brentwood_Home_-_Foundation_Web_-1.jpg?ch=Width,DPR&w=115&dpr=1&fit=clip" alt="Include a foundation">
        {% endcase %}
    </div>
    <div class="column copy">
        <p class="text-left hidden-xs">
            Our minimalist design, high-grade wood frame, tool-free assembly foundation.
            <a href="/products/foundation">Learn more</a>
        </p>
        <p class="text-left visible-xs-block">
            Minimalist design, high-grade wood frame, tool-free assembly.
            <a href="/products/foundation">Learn more</a>
        </p>
        <p class="text-center"><strong id="easy-foundation-price"></strong></p>
    </div>
</div>