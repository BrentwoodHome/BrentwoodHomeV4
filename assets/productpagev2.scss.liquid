@mixin titleStyle($size){
    /*font-family: $palatino-stack;
    color: #4A4A4A;*/

    line-height: $size*1.3;
    font-size: $size;
    font-weight: 400;
    color: #4A4A4A;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: "essonnes-display", Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia, serif;
}
@mixin subTitleStyle($size){
    font-family: $body-stack;
    font-size: $size;
    line-height: $size*1.5;
    color: $semidark-text-color;
    text-transform: uppercase;
    font-weight: 500;
    margin: 6px 0;
}
