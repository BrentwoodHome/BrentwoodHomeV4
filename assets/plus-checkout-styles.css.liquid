/* ======================== General ======================== */
.plus-checkout-custom-fields__section-wrapper  {
  display: none;
}

.plus-checkout-custom-fields__section {
  padding-top: 0;
}

.plus-checkout-custom-fields__header {
  margin-bottom: 1em;
}

.plus-one-whole {
  width: 100%;
}

.plus-one-half {
  width: 50%;
}

.plus-one-third {
  width: 33.333%;
}

.plus-one-quarter {
  width: 25%;
}

@media (min-width: 750px) {
  .plus-checkout-custom-fields__section {
    padding-top: 0;
  }
  
  .plus-checkout-custom-fields__header {
    margin-bottom: 1.5em;
  }
}

@media (max-width: 749px) {
  .plus-one-half,
  .plus-one-third,
  .plus-one-quarter {
    width: 100%;
  }
}

.plus-checkout-custom-fields {
  margin: -0.42857em;
  zoom: 1;
  display: flex;
  flex-wrap: wrap;
}

.plus-checkout-custom-fields__content:before {
  content: "";
  display: table;
}

.plus-checkout-custom-fields__content:after {
  content:"";
  clear:both;
  display:table;
}

.plus-checkout-custom-field-wrapper {
  padding: 0.42857em;
  float: left;
  box-sizing: border-box;
}

