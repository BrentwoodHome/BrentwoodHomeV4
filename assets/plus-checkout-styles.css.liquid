.plus-checkout-custom-field__checkbox-input:checked:after {
  -webkit-transform: scale(1);
  transform: scale(1);
  opacity: 1;
}

/* ======================== Errors ======================== */
.plus-field-error .plus-checkout-custom-field__checkbox-input {
  border-color: {{ settings.plus_checkout_error_color }};
}

.plus-checkout-custom-field__error {
  display: none;
  line-height: 1.3em;
  margin: 10px 0 0 0;
  color: red;
  text-align: right;
  float: right;
  width: 60%;
}

@media (max-width: 425px) {
  .plus-checkout-custom-field__error {
    text-align: center;
  }
}

