@media (max-width: 425px) {
  .plus-checkout-custom-field {
    justify-content: center;
  }
}

/* ======================== Inputs ======================== */
.plus-checkout-custom-field.checkbox {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.plus-checkout-checkbox {
  padding-right: 0.75em;
  float: left;
}

.plus-checkout-custom-field__checkbox-input {
  width: 18px;
  height: 18px;
  -webkit-box-shadow: 0 0 0 0 {{ settings.checkout_accent_color }} inset;
  box-shadow: 0 0 0 0 {{ settings.checkout_accent_color }} inset;
  -webkit-transition: all 0.2s ease-in-out;
  transition: all 0.2s ease-in-out;
  position: relative;
  cursor: pointer;
  vertical-align: -4px;
  border: 1px #d9d9d9 solid;
  border-radius: 4px;
}

.plus-checkout-custom-field__checkbox-input:checked {
  border: none;
  -webkit-box-shadow: 0 0 0 10px {{ settings.checkout_accent_color }} inset;
  box-shadow: 0 0 0 10px {{ settings.checkout_accent_color }} inset;
}

