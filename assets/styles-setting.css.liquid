{% if settings.use_color_swatch %}
.quick-view .selector-wrapper { display: none; }
{% endif %}

{% if settings.enable_quick_view %}
.products-grid .product-des { bottom: 0; }
{% endif %}


{% if settings.display_backgroun_newsleter %}
{% capture paralax_news %}bg_newsneter.jpg{% endcapture %}
.newsneter .paralax-images{background:url({{ paralax_news | asset_url }}) center center no-repeat ;
  background-position: center center!important;background-repeat: no-repeat;
  background-size: cover;
  position: absolute;
  height: 500px;
  width: 100%;
  top: 0!important;
  z-index: -1;
}
{% endif %}
{% if settings.display_testimonials_background %}
{% capture paralax_testimonials %}testimonials_paralax.jpg{% endcapture %}
.testimonials .paralax-images{
	background:url({{ paralax_testimonials | asset_url }}) center center no-repeat;
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    height: 2000px;
    width: 100%;
   z-index: -1;
}
{% endif %}

{% capture bg_newsletter %}bg_newsletter.jpg{% endcapture %}
.popupnewsletter{background:url({{ bg_newsletter | asset_url }}) scroll right center no-repeat ;
	
}


{% capture paralax_block %}paralax-img.jpg{% endcapture %}
.paralx-main .paralax-images{
	background:url({{ paralax_block | asset_url }}) center center no-repeat;
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    height: 1000px;
    width: 100%;
   	z-index: -1;
    background-attachment: fixed;
}
{% if settings.display_loadding_page %}
#loading {
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;background-position: center center;
  position: fixed;
  display: block;
  opacity: 1;
  background-color: #fff;
  z-index: 99;background-image:url(loadding-page.gif);background-repeat:no-repeat;
  text-align: center;
}
{% endif %}


